@using FoodDeliveryProject.Model.Models
@model IEnumerable<Order>
@{
    ViewBag.Title = "Cart";
}

<h2>Cart</h2>
<form action="~/Customer/UpdateOrderQuantity">
    <table>


        <tr>
            <th>Food Name</th>
            <th>Quantity</th>
        </tr>
        @if (Model.Count() != 0)
        {
            foreach (var m in Model)
            {
                <tr>
                    <td>@m.Food.FoodName   </td>
                    <td>@m.Quantity</td>
                    <td>
                        <input type="text" name="foodId" value="@m.Food.Id" hidden />
                        <input type="text" name="quantity" />
                        <input type="submit" value="Update" />
                    </td>
                    <td><a href="~/Customer/RemoveOrder?orderId=@m.Id">Remove from cart</a></td>
                </tr>
                <tr><td>@Model.First().Bill.TotalPrice</td></tr>

                <tr><td><a href="~/Customer/SubmitDeliveryForm">Submit bill</a></td></tr>
                // <tr><td><a href="~/Customer/SendToCompany">Send bill to company</a></td></tr>
            }
        }
        else
        {
            <tr><td>Nothing to show</td></tr>
        }

    </table>
</form>
